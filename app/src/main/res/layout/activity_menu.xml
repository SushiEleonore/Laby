<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:text=""
        android:onClick="backToHome"
        android:id="@+id/button9"
        android:background="@drawable/home" android:layout_gravity="center_horizontal"
        android:layout_weight="0.11"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_weight="0.2">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:onClick="level1"
            android:id="@+id/button2"
            android:layout_weight="0.33"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2"
            android:onClick="level2"
            android:id="@+id/button3"
            android:layout_weight="0.33"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3"
            android:onClick="level3"
            android:id="@+id/button4"
            android:layout_weight="0.33"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_weight="0.2">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4"
            android:onClick="level4"
            android:id="@+id/button5"
            android:layout_weight="0.33"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5"
            android:onClick="level5"
            android:id="@+id/button6"
            android:layout_weight="0.33"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="6"
            android:onClick="level6"
            android:id="@+id/button7"
            android:layout_weight="0.33"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_weight="0.2">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7"
            android:onClick="level7"
            android:id="@+id/button8" android:layout_weight="0.5"/>
        <Button android:layout_width="wrap_content" android:layout_height="match_parent"
                android:text="8" android:onClick="level8" android:id="@+id/button15"
                android:layout_weight="0.5"/>
    </LinearLayout>
</LinearLayout>